	<!-- The following code includes tools.jar for JDKs on Windows, Linux and 
		Solaris (it is already included in the runtime for Mac OS X and some free JDKs). 
		From http://maven.apache.org/general.html#tools-jar-dependency
		-->
	<profiles>
		<profile>
			<id>default-tools.jar</id>
			<activation>
				<property>
					<name>java.vendor</name>
					<value>Sun Microsystems Inc.</value>
				</property>
			</activation>
			<dependencies>
				<dependency>
					<groupId>com.sun</groupId>
					<artifactId>tools</artifactId>
					<version>1.4.2</version>
					<scope>system</scope>
					<systemPath>${java.home}/../lib/tools.jar</systemPath>
				</dependency>
			</dependencies>
		</profile>
	</profiles>
