<assembly>
    <formats>
        <format>zip</format>
        <format>tar.gz</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <fileSet>
            <outputDirectory>/apidocs</outputDirectory>
            <directory>
                ${project.build.directory}/site/apidocs
            </directory>
        </fileSet>
    </fileSets>
    <files>
        <file>
            <source>src/main/resources/README.txt</source>
            <outputDirectory>/</outputDirectory>
            <filtered>true</filtered>
        </file>
        <file>
            <source>choco-solver/target/choco-solver-${project.version}.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>choco-solver/target/choco-solver-${project.version}-with-sources.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>cpvisu-tracer/target/choco-solver-cpviz-${project.version}.jar</source>
            <outputDirectory>/</outputDirectory>
        </file>
        <file>
            <source>samples/target/samples-${project.version}-dep.jar</source>
            <outputDirectory>/</outputDirectory>
            <destName>samples-${project.version}.jar</destName>
        </file>
        <file>
            <source>src/site/resources/tex/documentation/choco-doc.pdf</source>
            <outputDirectory>/</outputDirectory>
            <destName>choco-doc-${project.version}.pdf</destName>
        </file>
        <file>
            <source>choco-db/target/choco-db-${project.version}-dep.jar</source>
            <destName>choco-db-${project.version}.jar</destName>
            <outputDirectory>/extra</outputDirectory>
        </file>
        <file>
            <source>choco-parsers/target/choco-parsers-${project.version}-dep.jar</source>
            <destName>choco-parsers-${project.version}.jar</destName>
            <outputDirectory>/extra</outputDirectory>
        </file>
        <file>
            <source>choco-cli/target/choco-cli-${project.version}-dep.jar</source>
            <destName>choco-cli-${project.version}.jar</destName>
            <outputDirectory>/extra</outputDirectory>
        </file>
        <file>
            <source>choco-visu/target/choco-visu-${project.version}-dep.jar</source>
            <destName>choco-visu-${project.version}.jar</destName>
            <outputDirectory>/extra</outputDirectory>
        </file>
    </files>

</assembly>
